{
  "name": "copilot-improvement-experiments",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=20.x"
  },
  "workspaces": [
    "packages/extension",
    "packages/server",
    "packages/shared"
  ],
  "scripts": {
    "build": "npm run build -w packages/shared && npm run build -w packages/server && npm run compile -w packages/extension",
    "lint": "eslint .",
    "format": "prettier --check .",
    "rebuild:better-sqlite3:node": "npm rebuild better-sqlite3",
    "test:unit": "npm run rebuild:better-sqlite3:node --if-present && vitest run",
    "test:integration": "tsc -p tests/integration/tsconfig.json && node ./tests/integration/dist/vscode/runTests.js",
    "test:contracts": "npm run test:contracts -w packages/server",
    "ci-check": "npm run lint && npm run test:unit"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.10",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "@vitest/coverage-v8": "1.6.1",
    "@vscode/test-electron": "^2.3.7",
    "glob": "^11.0.0",
    "mocha": "^10.6.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.3.3",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.11.0",
    "vitest": "^1.6.0"
  }
}
