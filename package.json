{
  "name": "copilot-improvement-experiments",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "20.x"
  },
  "workspaces": [
    "packages/extension",
    "packages/server",
    "packages/shared"
  ],
  "scripts": {
    "build": "npm run build -w packages/shared && npm run build -w packages/server && npm run compile -w packages/extension",
    "lint": "eslint .",
    "format": "prettier --check .",
    "test:unit": "vitest run",
    "test:integration": "node ./tests/integration/vscode/runTests.js",
    "test:contracts": "npm run test:contracts -w packages/server",
    "ci-check": "npm run lint && npm run test:unit"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
  "@vscode/test-electron": "^2.3.7",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.3.3",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  }
}
