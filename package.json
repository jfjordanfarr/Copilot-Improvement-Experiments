{
  "name": "copilot-improvement-experiments",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "workspaces": [
    "packages/extension",
    "packages/server",
    "packages/shared"
  ],
  "scripts": {
    "build": "npm run build -w packages/shared && npm run build -w packages/server && npm run compile -w packages/extension",
    "lint": "eslint .",
    "format": "prettier --check .",
    "rebuild:better-sqlite3:node": "node ./scripts/rebuild-better-sqlite3.mjs",
    "rebuild:better-sqlite3:force": "node ./scripts/rebuild-better-sqlite3.mjs --force",
  "test:unit": "npm run rebuild:better-sqlite3:node --if-present && vitest run",
    "test:integration": "node ./tests/integration/clean-dist.mjs && tsc -p tests/integration/tsconfig.json && node ./tests/integration/dist/vscode/runTests.js",
    "verify": "npm run lint && npm run rebuild:better-sqlite3:force && npm run test:unit && npm run test:integration",
    "safe:commit": "node ./scripts/safe-to-commit.mjs",
    "graph:inspect": "tsx --tsconfig ./tsconfig.base.json scripts/graph-tools/inspect-symbol.ts",
    "graph:audit": "tsx --tsconfig ./tsconfig.base.json scripts/graph-tools/audit-doc-coverage.ts",
    "graph:snapshot": "tsx --tsconfig ./tsconfig.base.json scripts/graph-tools/snapshot-workspace.ts",
  "slopcop:markdown": "tsx --tsconfig ./tsconfig.base.json scripts/slopcop/check-markdown-links.ts",
  "slopcop:assets": "tsx --tsconfig ./tsconfig.base.json scripts/slopcop/check-asset-paths.ts",
  "slopcop:symbols": "tsx --tsconfig ./tsconfig.base.json scripts/slopcop/check-symbols.ts",
    "test:contracts": "npm run test:contracts -w packages/server",
    "ci-check": "node ./scripts/safe-to-commit.mjs --skip-git-status"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.10",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "@vitest/coverage-v8": "1.6.1",
    "@vscode/test-electron": "^2.3.7",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "glob": "^11.0.0",
    "mocha": "^10.6.0",
    "prettier": "^3.3.3",
    "tsx": "^4.20.6",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.11.0",
    "vitest": "^1.6.0"
  }
}
