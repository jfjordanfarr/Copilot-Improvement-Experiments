{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
  "moduleResolution": "Node",
  "baseUrl": ".",
    "lib": ["ES2022"],
  "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "outDir": "dist",
    "paths": {
      "@live-documentation/shared": ["packages/shared/src/index"],
      "@live-documentation/shared/*": ["packages/shared/src/*"],
      "@live-documentation/scripts": ["packages/scripts/src/index"],
      "@live-documentation/scripts/*": ["packages/scripts/src/*"]
    }
  },
  "references": [
    { "path": "packages/shared" },
    { "path": "packages/server" },
    { "path": "packages/extension" },
    { "path": "packages/scripts" }
  ]
}
