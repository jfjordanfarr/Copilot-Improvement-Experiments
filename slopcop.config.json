{
  "ignoreGlobs": [
    "AI-Agent-Workspace/ChatHistory/**",
    "AI-Agent-Workspace/tmp/**"
  ],
  "markdown": {
    "includeGlobs": [
      "**/*.md",
      "**/*.mdmd",
      ".live-documentation/**/*.md"
    ],
    "ignoreGlobs": [
      "AI-Agent-Workspace/tmp/**"
    ],
    "ignoreTargets": [
      "packages/shared/src/tooling/__fixtures__/documentation-links/sample-tool.mdmd.md"
    ]
  },
  "assets": {
    "includeGlobs": [
      "**/*.{html,htm,css,scss,sass}"
    ],
    "ignoreGlobs": [
      "tests/integration/fixtures/slopcop-assets/workspace/**",
      "AI-Agent-Workspace/tmp/**"
    ],
    "ignoreTargets": [
      "\\.[a-f0-9]{8,}\\.[a-z0-9]+$"
    ],
    "rootDirectories": [
      "public",
      "static",
      ".live-documentation"
    ]
  },
  "symbols": {
    "enabled": true,
    "includeGlobs": [
      "**/*.md",
      "**/*.mdmd",
      "**/*.mdmd.md"
    ],
    "ignoreGlobs": [
      "tests/integration/fixtures/slopcop-symbols/workspace/**",
      "tests/integration/fixtures/simple-workspace/**",
      "AI-Agent-Workspace/tmp/**"
    ],
    "ignoreTargets": []
  }
}
