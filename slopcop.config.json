{
  "ignoreGlobs": [
    "AI-Agent-Workspace/ChatHistory/**"
  ],
  "markdown": {
    "ignoreTargets": []
  },
  "assets": {
    "includeGlobs": [
      "**/*.{html,htm,css,scss,sass}"
    ],
    "ignoreGlobs": [
      "tests/integration/fixtures/slopcop-assets/workspace/**"
    ],
    "ignoreTargets": [
      "\\.[a-f0-9]{8,}\\.[a-z0-9]+$"
    ],
    "rootDirectories": [
      "public",
      "static"
    ]
  },
  "symbols": {
    "enabled": true,
    "includeGlobs": [
      "**/*.md",
      "**/*.mdmd",
      "**/*.mdmd.md"
    ],
    "ignoreGlobs": [
      "tests/integration/fixtures/slopcop-symbols/workspace/**"
    ],
    "ignoreTargets": []
  }
}
