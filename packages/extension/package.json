{
  "name": "link-aware-diagnostics",
  "displayName": "Link-Aware Diagnostics",
  "publisher": "copilot-improvement",
  "version": "0.0.0",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "linkDiagnostics.overrideLink",
        "title": "Link Diagnostics: Override Link",
        "icon": "$(link-external)"
      },
      {
        "command": "linkDiagnostics.inspectDependencies",
        "title": "Link Diagnostics: Inspect Dependencies",
        "icon": "$(repo)"
      },
      {
        "command": "linkDiagnostics.inspectSymbolNeighbors",
        "title": "Link Diagnostics: Inspect Symbol Neighbors",
        "icon": "$(symbol-structure)"
      },
      {
        "command": "linkDiagnostics.analyzeWithAI",
        "title": "Link Diagnostics: Analyze Impact with AI",
        "icon": "$(sparkle)"
      },
      {
        "command": "linkDiagnostics.refreshDiagnosticsTree",
        "title": "Link Diagnostics: Refresh Diagnostics Tree",
        "icon": "$(refresh)"
      },
      {
        "command": "linkDiagnostics.acknowledgeDiagnosticFromTree",
        "title": "Link Diagnostics: Acknowledge Diagnostic",
        "icon": "$(check)"
      },
      {
        "command": "linkDiagnostics.exportDiagnostics",
        "title": "Link Diagnostics: Export Diagnostics",
        "icon": "$(cloud-download)"
      },
      {
        "command": "linkDiagnostics.showLatencySummary",
        "title": "Link Diagnostics: Show Telemetry Summary",
        "icon": "$(pulse)"
      },
      {
        "command": "linkDiagnostics.openLinkedArtifact",
        "title": "Link Diagnostics: Open Linked Artifact",
        "icon": "$(go-to-file)"
      },
      {
        "command": "linkAwareDiagnostics.isServerReady",
        "title": "Link-Aware Diagnostics: Server Ready",
        "icon": "$(debug-start)"
      },
      {
        "command": "linkAwareDiagnostics.clearAllDiagnostics",
        "title": "Link-Aware Diagnostics: Clear Diagnostics",
        "icon": "$(trash)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "linkDiagnostics.diagnosticsTree",
          "name": "Link Diagnostics"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "linkDiagnostics.refreshDiagnosticsTree",
          "when": "view == linkDiagnostics.diagnosticsTree",
          "group": "navigation@1"
        },
        {
          "command": "linkDiagnostics.exportDiagnostics",
          "when": "view == linkDiagnostics.diagnosticsTree",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "linkDiagnostics.acknowledgeDiagnosticFromTree",
          "when": "view == linkDiagnostics.diagnosticsTree && viewItem == linkDiagnostics.diagnostic",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Link-Aware Diagnostics",
      "properties": {
        "linkAwareDiagnostics.llmProviderMode": {
          "type": "string",
          "enum": ["prompt", "local-only", "disabled"],
          "default": "prompt",
          "description": "Control how LLM providers are selected before diagnostics are enabled."
        },
        "linkAwareDiagnostics.noiseSuppression.level": {
          "type": "string",
          "enum": ["low", "medium", "high"],
          "default": "medium",
          "description": "Adjust debounce and batching thresholds for drift diagnostics."
        },
        "linkAwareDiagnostics.noiseSuppression.minConfidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Override the minimum ripple confidence (0-1) required before diagnostics emit."
        },
        "linkAwareDiagnostics.noiseSuppression.maxDepth": {
          "type": "number",
          "minimum": 1,
          "description": "Limit ripple diagnostics to the specified maximum hop depth."
        },
        "linkAwareDiagnostics.noiseSuppression.maxPerChange": {
          "type": "number",
          "minimum": 1,
          "description": "Cap how many ripple diagnostics a single change event may emit."
        },
        "linkAwareDiagnostics.noiseSuppression.maxPerArtifact": {
          "type": "number",
          "minimum": 1,
          "description": "Restrict how many diagnostics can target the same dependent artifact per change."
        },
        "linkAwareDiagnostics.storagePath": {
          "type": "string",
          "default": "",
          "description": "Optional override for the on-disk cache storing knowledge-graph projections."
        },
        "linkAwareDiagnostics.enableDiagnostics": {
          "type": "boolean",
          "default": false,
          "description": "Gate all diagnostics until the user consents to a provider mode."
        },
        "linkAwareDiagnostics.debounce.ms": {
          "type": "number",
          "default": 1000,
          "description": "Debounce window (in milliseconds) before change events trigger diagnostics."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p tsconfig.json",
    "watch": "tsc -p tsconfig.json --watch"
  },
  "dependencies": {
    "@copilot-improvement/shared": "file:../shared",
    "vscode-languageclient": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0"
  }
}
