{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "rootDir": "./",
    "rootDirs": ["./", "../.."],
    "paths": {
      "@copilot-improvement/shared": ["packages/shared/dist/index"],
      "@copilot-improvement/shared/*": ["packages/shared/dist/*"]
    },
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
    "composite": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "mocha"]
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "./dist",
    "./benchmarks/fixtures/**/*"
  ]
}
